<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/edTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="24dp"
        android:ems="10">
        <requestFocus/>
    </EditText>
    <EditText
        android:id="@+id/edTxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/edTxt"
        android:layout_below="@+id/edTxt"
        android:layout_marginTop="24dp"
        android:ems="10"/>
    <TextView
        android:id="@+id/txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edTxt"
        android:layout_alignBottom="@+id/edTxt"
        android:layout_alignParentLeft="true"
        android:text="File Name : "/>
    <TextView
        android:id="@+id/txtView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edTxt2"
        android:layout_alignBottom="@+id/edTxt2"
        android:layout_alignParentLeft="true"
        android:text="Data : "/>
    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edTxt2"
        android:layout_below="@+id/edTxt2"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="16dp"
        android:text="Save"/>
    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn"
        android:layout_alignBottom="@+id/btn"
        android:layout_toRightOf="@+id/btn"
        android:text="Read"/>
</RelativeLayout>